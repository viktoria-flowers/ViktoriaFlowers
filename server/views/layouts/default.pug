    block head
  body
    // start: header
    header.header
      .container
        nav.navbar.navbar-default.text-center
          .col-md-12
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='/home')
                img.img-responsive(src='img/logo.png', style='width: 140px; margin-top: -16px;')
            #myNavbar.collapse.navbar-collapse
              ul.nav.navbar-nav
                li.active
                  a(href='/home') Начало
                li
                  a(href='/bouquets') Букети
                li
                  a(href='/baskets') Кошници
                li
                  a(href='/pots') Саксии
                li
                  a(href='/cards') Картички
                li.pull-right
                  a(href='/login') Вход
                    span
                      i.fa.fa-sign-in

    block content
    
    // start: footer
    footer.footer
      .row.max-inner
        .columns.col-2
          h3 Адрес
