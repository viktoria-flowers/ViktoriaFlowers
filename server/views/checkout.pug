extends /layouts/default.pug

block content
  script.
    var newVal;
    var totalItemPrice;
  .breadcrumbs
    .container
      ol.breadcrumb.breadcrumb1.animated.wow.slideInLeft(data-wow-delay='.5s')
        li
          a(href='/')
            span.glyphicon.glyphicon-home(aria-hidden='true')
            | Начало
        li.active Завършване на поръчката
  .checkout
    .container
      h2
        | Количка: 
        span 3 Products
      .checkout-right
        table.timetable_sub
          thead
            tr
              th SL No.
              th Product
              th Количество
              th Product Name
              th Цена
              th Изтрии
          tbody
            tr.rem1
              td.invert 1
              td.invert-image
                a(href='single.html')
                  img.img-responsive(src='/static/images/1.png', alt=' ')
              td.invert
                .quantity
                  .quantity-select
                    .entry.value-minus  
                    .entry.value
                      span 1
                    .entry.value-plus.active  
              td.invert Tata Salt
              td.invert
                label
                  | 25 
                span лв.
              td.invert
                .rem
                  .close1  
                script.
                  $(document).ready(function(c) {
                    $('.close1').on('click', function(c){
                      $('.rem1').fadeOut('slow', function(c){
                        $('.rem1').remove();
                      });
                    });
                  });
            tr.rem2
              td.invert 2
              td.invert-image
                a(href='single.html')
                  img.img-responsive(src='/static/images/2.png', alt=' ')
              td.invert
                .quantity
                  .quantity-select
                    .entry.value-minus  
                    .entry.value
                      span 1
                    .entry.value-plus.active  
              td.invert Fortune oil
              td.invert $250.00
              td.invert
                .rem
                  .close2  
                script.
                  $(document).ready(function(c) {
                    $('.close2').on('click', function(c){
                      $('.rem2').fadeOut('slow', function(c){
                        $('.rem2').remove();
                      });
                    });
                  });
            tr.rem3
              td.invert 3
              td.invert-image
                a(href='single.html')
                  img.img-responsive(src='/static/images/3.png', alt=' ')
              td.invert
                .quantity
                  .quantity-select
                    .entry.value-minus  
                    .entry.value
                      span 1
                    .entry.value-plus.active  
              td.invert Aashirvaad atta
              td.invert $15.00
              td.invert
                .rem
                  .close3  
                script.
                  $(document).ready(function(c) {
                      $('.close3').on('click', function(c){
                        $('.rem3').fadeOut('slow', function(c){
                          $('.rem3').remove();
                        });
                    });
                  });
            // quantity
            script.
              $('.value-plus').on('click', function(){
                var divUpd = $(this).parent().find('.value');
                    newVal = parseInt(divUpd.text(), 10)+1;
                divUpd.text(newVal);
              });
              $('.value-minus').on('click', function(){
                var divUpd = $(this).parent().find('.value'), newVal = parseInt(divUpd.text(), 10)-1;
                if(newVal>=1) divUpd.text(newVal);
              });
            // quantity
      .checkout-left
        .checkout-left-basket
          ul
            li
              | Product1 
              span
                
            li
              | Product2 
              span $25.00 
            li
              | Product3 
              span $29.00 
            li
              | Total Service Charges 
              span $15.00
            li
              | Total
              span $84.00
            script.
              var itemPrice = +($('td.invert label').html());
                  totalItemPrice = itemPrice += newVal;
              $('.checkout-left-basket ul li span').html(totalItemPrice);
              console.log(newVal);

            a.btn.btn-lg.btn-success(href='#myModal', data-toggle='modal') Завършване на поръчката
            // Modal HTML
            #myModal.modal.fade
              .modal-dialog
                .modal-content
                  .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4.modal-title Потвърдете поръчката
                  .modal-body
                    p Сигурни ли сте, че искате да направите поръчката?
                  .modal-footer
                    button.btn.btn-danger(type='button', data-dismiss='modal') Отказ
                    input(type='submit', value='Направи поръчка').btn.btn-success
    .clearfix