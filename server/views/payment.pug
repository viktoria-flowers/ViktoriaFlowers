extends /layouts/default.pug

block content
  .breadcrumbs
    .container
      ol.breadcrumb.breadcrumb1.animated.wow.slideInLeft(data-wow-delay='.5s')
        li
          a(href='/')
            span.glyphicon.glyphicon-home(aria-hidden='true')
            | Начало
        li.active Начини на плащане
    br
    br
    .container
      .col-md-4
        a(href="/payOnDelivery")
          h3.text-center.payText Наложен платеж
          img(src="static/images/payOnDelivery.jpg").paymentImages
      .col-md-4
        a(href="/paypal-payment")
          h3.text-center.payText PayPal
          img(src="static/images/paypal.jpg").paymentImages
      .col-md-4
        a(href="/card-payment")
          h3.text-center.payText Кредитна/дебитна карта
          img(src="static/images/creditCardPayment.jpg").paymentImages            
  .clearfix