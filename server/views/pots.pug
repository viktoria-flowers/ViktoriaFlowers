extends /layouts/default.pug

block content
  .breadcrumbs
    .container
      ol.breadcrumb.breadcrumb1.animated.wow.slideInLeft(data-wow-delay='.5s')
        li
          a(href='/')
            span.glyphicon.glyphicon-home(aria-hidden='true')
            | Начало
        li.active Саксии
    .products
      .container
        .col-md-12.products-right
          .products-right-grid
            .products-right-grids
              .sorting
                select#country.frm-field.required.sect(onchange='change_country(this.value)')
                  option(value='null') Default sorting
                  option(value='null') Sort by popularity
                  option(value='null') Sort by average rating
                  option(value='null') Sort by price
              .sorting-left
                select#country1.frm-field.required.sect(onchange='change_country(this.value)')
                  option(value='null') Item on page 9
                  option(value='null') Item on page 18
                  option(value='null') Item on page 32
                  option(value='null') All
              .clearfix
            .agile_top_brands_grids
          - for (var x = 1; x <= 12; x += 1)
              .col-md-4.top_brand_left
                .hover14.column
                  .agile_top_brand_left_grid
                    .agile_top_brand_left_grid_pos
                      img.img-responsive(src='static/images/offer.png', alt=' ')
                    .agile_top_brand_left_grid1
                      figure
                        .snipcart-item.block
                          .snipcart-thumb
                            a(href='single.html')
                              img(title=' ', alt=' ', src='static/images/pc1.png')
                            p Baby Lotion
                            h4
                              | $35.99 
                              span $55.00
                          .snipcart-details.top_brand_home_details
                            form(action='#', method='post')
                              fieldset
                                input(type='hidden', name='cmd', value='_cart')
                                input(type='hidden', name='add', value='1')
                                input(type='hidden', name='business', value=' ')
                                input(type='hidden', name='item_name', value='Fortune Sunflower Oil')
                                input(type='hidden', name='amount', value='35.99')
                                input(type='hidden', name='discount_amount', value='1.00')
                                input(type='hidden', name='currency_code', value='лв.')
                                input(type='hidden', name='return', value=' ')
                                input(type='hidden', name='cancel_return', value=' ')
                                input.button(type='submit', name='submit', value='Добави в количката') 
          nav.numbering
            ul.pagination.paging
              li
                a(href='#', aria-label='Previous')
                  span(aria-hidden='true') «
              li.active
                a(href='#')
                  | 1
                  span.sr-only (current)
              li
                a(href='#') 2
              li
                a(href='#') 3
              li
                a(href='#') 4
              li
                a(href='#') 5
              li
                a(href='#', aria-label='Next')
                  span(aria-hidden='true') »
        .clearfix