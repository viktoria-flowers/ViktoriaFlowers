extends ../layouts/default

include ../mixins/productErrors.pug

block content
  .breadcrumbs
    .container
      ol.breadcrumb.breadcrumb1.animated.wow.slideInLeft(data-wow-delay='.5s')
        li
          a(href='/')
            span.glyphicon.glyphicon-home(aria-hidden='true')
            | Начало
        li.active Създаване на нов продукт
  br
  // to do still not that responsive
  br
  .col-sm-5.col-sm-offset-2.text-center
    .row
      .col-md-4
        img.img-responsive.center-block(src='https://cdn1.iconfinder.com/data/icons/softwaredemo/PNG/256x256/Pencil3.png', alt='')
      .col-md-8
        h3
          | Създай нов продукт
        hr
        form(action='/products/create', method='POST', enctype='multipart/form-data')
          - if(errors)
              ul.text-danger 
                  each err in errors
                        +getErrorText(err)
          .form-group
            .col-sm-5.text-left
              label.newProdLabelPadding Име *
            .col-sm-7.text-left
              input.form-control(name='title', placeholder=' ', value=model?model.title || '' : '', required='required', type='text')
            br
          .form-group
            .col-sm-5.text-left
              label.newProdLabelPadding Цена *
            .col-sm-7.text-left
              input.form-control(name='price', placeholder=' ', value=model?model.price || '' : '', required='required', type='number', min=0)
            br
          .form-group
            .col-sm-5.text-left
              label.newProdLabelPadding Предишна цена *
            .col-sm-7.text-left
              input.form-control(name='wasPrice', placeholder=' ', value=model?model.wasPrice || '' : '', type='number', min=0)
            br
          .form-group
            .col-sm-5.text-left
              label.newProdLabelPadding Тип *:
            .col-sm-7.text-left
              select.form-control(name='type', value='wedding')
                option(value='circle', selected= model&&model.type==='circle') Кръгли
                option(value='tall', selected= model&&model.type==='tall') Високи
                option(value='wedding', selected= model&&model.type==='wedding') Сватбени
                option(value='extraordinary', selected= model&&model.type==='extraordinary') Нестандартни
                option(value='baskets', selected= model&&model.type==='baskets') Кошници
                option(value='pots', selected= model&&model.type==='pots') Саксии
                option(value='cards', selected= model&&model.type==='cards') Картички
            br
            br
          .form-group
            .col-sm-5.text-left
              label.newProdLabelPadding Cнимка *
            .col-sm-7.text-center
              label.btn-bs-file.btn.btn-primary Изберете снимка
                input(name='image', placeholder=' ', required='required', type='file', accept='image/*')
            br
            br
          .form-group
            .col-sm-5.text-left
              label.newProdLabelPadding Описание *
            .col-sm-7.text-left
              textarea.form-control(name='description', placeholder='Описание', required='')
                =  value=model?model.description || '' : ''
            br
          input.btn.btn-warning.btn-md(value='Добави новия продукт', type='submit')
          br
          hr
