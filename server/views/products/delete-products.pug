extends /layouts/default.pug

block content
  .breadcrumbs
    .container
      ol.breadcrumb.breadcrumb1.animated.wow.slideInLeft(data-wow-delay='.5s')
        li
          a(href='/')
            span.glyphicon.glyphicon-home(aria-hidden='true')
            | Начало
        li.active Изтрии продукт
  .container.table-responsive
    table#del-table.table.text-left
      thead
        tr
          th Уникален номер на продукта
          th Име
          th Цена
          th Дата на добавяне
          th
      tbody
        if (productsList && productsList.length)
          - for(var i = 0; i < productsList.length; i += 1) 
              tr.productsRow
                td.word-wrap.idCell(value=productsList[i]._id)
                  = productsList[i]._id
                td.word-wrap
                  = productsList[i].title
                td.word-wrap
                  = productsList[i].price + ' лв.'
                td.word-wrap
                  = moment(productsList[i].dateCreated).format('MMMM Do YYYY, h:mm:ss a')
                td.word-wrap
                  input.btn.btn-md.btn-danger(type="button", value="Изтриите продукта", class="delete_product") 