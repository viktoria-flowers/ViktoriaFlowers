extends /layouts/default.pug

block content
  .login-page.page.fix
    .container
      .row
        .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
          .login.text-center
              form#login-form(action='/register', method="POST")
                h2 Регистрация
                label
                  | Потребителско име
                  span *
                input(type='text', name='username')
                label
                  | Парола
                  span *
                input(type='password', name='password')
                label
                  | E-mail
                  span *
                input(type='email', name='email')
                label
                  | Адрес
                  span *
                input(type='text', name='contactInfo')
                label
                  | Телефон за контакт
                  span *
                input(type='tel', name='phone')
                input(type='submit', value='Регистрация')